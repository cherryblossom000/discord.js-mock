{
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020"],
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist",
    "noEmit": true,
    "importsNotUsedAsValues": "error",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "noErrorTruncation": true
  }
}
