{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Current File",
      "program": "${file}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Lint",
      "program": "${workspaceFolder}/node_modules/eslint/bin/eslint.js",
      "args": ["stuff/eslint.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Current File (ts)",
      "program": "${file}",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "TS-Node",
      "args": ["${file}"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "TS_NODE_LOG_ERROR": "true"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "args": [
        "${workspaceFolder}/node_modules/jest/bin/jest.js", "${file}",
        "-c", "jest.config.dev.js",
        "--runInBand",
        "--collectCoverage", "false"
      ],
      "skipFiles": ["<node_internals>/", "node_modules/"]
    }
  ]
}
